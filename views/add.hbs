<h1>Add contact</h1>
<form class="form-horizontal col-lg-8 col-lg-offset-2"
    method="post" action="/add">
    <fieldset>
        <div class="form-group">
          <label for="prefix" class="col-lg-2 control-label">Name Prefix: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="prefix" id="prefix"
                    placeholder="e.g. Dr.">
          </div>
        </div>
        <div class="form-group">
          <label for="forename" class="col-lg-2 control-label">Forename: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="forename" id="forename"
                    placeholder="e.g. John" required>
          </div>
        </div>
        <div class="form-group">
          <label for="surname" class="col-lg-2 control-label">Surname: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="surname" id="surname"
                    placeholder="e.g. Doe" required>
          </div>
        </div>
        <div class="form-group">
          <label for="suffix" class="col-lg-2 control-label">Name Suffix: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="suffix" id="suffix"
                    placeholder="e.g. Jr.">
          </div>
        </div>
        <div class="form-group">
          <label for="number" class="col-lg-2 control-label">Phone Number: </label>
          <div class="col-lg-10">
            <input  type="number" class="form-control"
                    name="number" id="number" 
                    placeholder="e.g. 06201234567">
          </div>
        </div>
        <div class="form-group">
          <label for="permanentaddress" class="col-lg-2 control-label">Permanent Address: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="permanentaddress" id="permanentaddress"
                    placeholder="e.g. 1111 Example st. 1.">
          </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8 col-lg-offset-2">
                <button type="reset" class="btn btn-default pull-left">Cancel</button>
                <button type="submit" class="btn btn-primary pull-right">Add</button>
            </div>
        </div>
    </fieldset>
</form>